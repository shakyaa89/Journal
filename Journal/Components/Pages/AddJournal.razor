@page "/journal/add"
@using Journal.Models
@using Journal.Services
@inject NavigationManager Navigation
@inject IJournalService JournalService
@inject IAuthService AuthService
@inject IJSRuntime JS

<div class="journal-container">
    <div class="journal-sidebar @(_hasTodayEntry ? "sidebar-disable" : "")">
        <!-- Date & Time Section -->
        <div class="sidebar-card">
            <div class="card-header">
                <label>DATE</label>
            </div>
            <div class="date-picker">
                <span class="date-icon"><i class="fa-solid fa-calendar"></i></span>
                <div class="date-info">
                    <div class="date-text">@DateTime.Now.ToString("MMM dd, yyyy")</div>
                    <div class="date-subtext">Today</div>
                </div>
            </div>
        </div>

        <!-- Primary Mood Section -->
        <div class="sidebar-card">
            <div class="card-header">
                <label>PRIMARY MOOD <span class="required">*</span></label>
            </div>
            <div class="mood-grid">
                @foreach (var mood in _moodsList)
                {
                    <div class="mood-item @(_newJournal.Mood == mood ? "active" : "")"
                         @onclick="() => _newJournal.Mood = mood">
                        <div class="mood-icon"><i class="fa-solid @(Util.GetMoodIcon(mood))"></i></div>
                        <div class="mood-label">@mood.ToUpper()</div>
                    </div>
                }
            </div>
        </div>

        <!-- Secondary Moods Section -->
        <div class="sidebar-card">
            <div class="card-header">
                <label>SECONDARY MOODS <span class="mood-limit">(Select 2)</span></label>
            </div>
            <div class="secondary-moods">
                @foreach (var mood in _moodsList)
                {
                    <label class="mood-chip @(_selectedSecondaryMoods.Contains(mood) ? "active" : "")">
                        <input type="checkbox"
                               checked="@_selectedSecondaryMoods.Contains(mood)"
                               @onchange="e => ToggleSecondaryMood(mood, e)" />
                        <span>@mood</span>
                    </label>
                }
            </div>
        </div>

        <!-- Tags Section -->
        <div class="sidebar-card">
            <div class="card-header">
                <label>TAGS</label>
            </div>
            <div class="tags-container">
                @foreach (var tag in _availableTags)
                {
                    <label class="tag-chip @(_selectedTags.Contains(tag) ? "active" : "")">
                        <input type="checkbox"
                               checked="@_selectedTags.Contains(tag)"
                               @onchange="e => ToggleTag(tag, e)" />
                        <span>@tag</span>
                    </label>
                }
            </div>
            <div class="tags-section">
                <input type="text"
                       class="tag-input"
                       placeholder="# Add tags (e.g. Health, Hobbies)..."
                       @bind="_newTagText" />
                <button @onclick="AddCustomTag" class="btn primary-btn">Add Tag</button>
            </div>
        </div>
    </div>

    <div class="journal-main">
        <!-- Toolbar -->
        <div id="quill-toolbar" class="quill-toolbar">
            <button class="ql-bold"></button>
            <button class="ql-italic"></button>
            <button class="ql-underline"></button>

            <button class="ql-list" value="ordered"></button>
            <button class="ql-list" value="bullet"></button>

            <select class="ql-header">
                <option value="1"></option>
                <option value="2"></option>
                <option selected></option>
            </select>

            <button class="ql-link"></button>

            <button class="ql-clean"></button>
        </div>

        <!-- Editor Area -->
        <div class="editor-container">
            <input type="text"
                   class="entry-title"
                   placeholder="Entry Title..."
                   @bind="_newJournal.Title"
                   disabled="@_hasTodayEntry" />

            <div id="editor"></div>
        </div>

        <button class="btn primary-btn btn-save"
                @onclick="SaveEntryAsync"
                disabled="@_hasTodayEntry">
            Save Entry
        </button>
        <a class="btn btn-cancel" href="/journal/list">Cancel</a>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <p class="error-msg">@_errorMessage</p>
        }

        @if (_hasTodayEntry)
        {
            <p class="error-msg">You have already created a journal entry for today!</p>
        }
    </div>
</div>

@code {
    // journal data for input
    private JournalEntry _newJournal = new();
    // current user variable
    private User? _currentUser;
    // error message variable
    private string _errorMessage = string.Empty;
    // Predefined tags
    private readonly List<string> _availableTags = new()
    {
        "Work", "Career", "Studies", "Family", "Friends", "Relationships",
        "Health", "Fitness", "Personal Growth", "Self-care", "Hobbies",
        "Travel", "Nature", "Finance", "Spirituality", "Birthday", "Holiday",
        "Vacation", "Celebration", "Exercise", "Reading", "Writing", "Cooking",
        "Meditation", "Yoga", "Music", "Shopping", "Parenting", "Projects",
        "Planning", "Reflection"
    };
    // All moods
    private readonly List<string> _moodsList = new()
    {
        "Happy", "Excited", "Relaxed", "Grateful", "Confident",
        "Calm", "Thoughtful", "Curious", "Nostalgic", "Bored",
        "Sad", "Angry", "Stressed", "Lonely", "Anxious"
    };

    private readonly List<string> _selectedSecondaryMoods = new();
    private readonly List<string> _selectedTags = new();

    // Variable for custom tags
    private string _newTagText = string.Empty;

    // Flag to check entry for today
    private bool _hasTodayEntry = false;

    // Load user
    protected override async Task OnInitializedAsync()
    {
        _currentUser = await AuthService.GetCurrentUser();

        // Check if user is logged in
        if (_currentUser == null)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        var today = DateTime.Now.Date;
        var journals = await JournalService.GetAllJournalsAsync(_currentUser.Id);
        _hasTodayEntry = journals.Any(j => j.CreatedAt.Date == today);
    }

    // Initialize quill editor 
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initQuill", "editor", "quill-toolbar");
        }
    }

    // Secondary moods selection
    private void ToggleSecondaryMood(string mood, ChangeEventArgs e)
    {
        if (!bool.TryParse(e.Value?.ToString(), out var isChecked))
            return;

        if (isChecked)
        {
            // Add mood if not selected
            if (_selectedSecondaryMoods.Count < 2 && !_selectedSecondaryMoods.Contains(mood))
            {
                _selectedSecondaryMoods.Add(mood);
            }
        }
        else
        {
            _selectedSecondaryMoods.Remove(mood);
        }
    }

    // Tags selection
    private void ToggleTag(string tag, ChangeEventArgs e)
    {
        if (!bool.TryParse(e.Value?.ToString(), out var isChecked))
            return;

        if (isChecked)
        {
            // Add tag if not selected
            if (!_selectedTags.Contains(tag))
            {
                _selectedTags.Add(tag);
            }
        }
        else
        {
            _selectedTags.Remove(tag);
        }
    }

    // Custom tags
    private void AddCustomTag()
    {
        var tag = _newTagText?.Trim();

        if (!string.IsNullOrWhiteSpace(tag))
        {
            if (!_availableTags.Contains(tag))
            {
                _availableTags.Add(tag);
            }

            if (!_selectedTags.Contains(tag))
            {
                _selectedTags.Add(tag);
            }
        }

        _newTagText = string.Empty;
    }

    // Save journal entry
    private async Task SaveEntryAsync()
    {
        try
        {
            // Get html content and store in journal object
            _newJournal.Content = await JS.InvokeAsync<string>("getQuillContent");

            // Error if content is empty
            if(string.IsNullOrEmpty(_newJournal.Content))
            {
                _errorMessage = "Content should not be empty!";
                return;
            }

            // Validation check
            var validationError = ValidateEntry();
            if (validationError != null)
            {
                _errorMessage = validationError;
                return;
            }

            // Check if user is logged in or not
            if (_currentUser is null)
            {
                _errorMessage = "User is not logged in.";
                return;
            }

            // Add secondary moods in the journal object
            _newJournal.SecondaryMood1 = _selectedSecondaryMoods[0];
            _newJournal.SecondaryMood2 = _selectedSecondaryMoods[1];
            // Add tags in the journal object as list
            _newJournal.Tags = _selectedTags.ToList();
            // Add word count in the journal object
            _newJournal.WordCount = Util.GetWordCount(_newJournal.Content);

            // Add the journal in the database
            await JournalService.AddJournalEntryAsync(
                _newJournal.Title,
                _newJournal.Content,
                _newJournal.Mood,
                _newJournal.SecondaryMood1,
                _newJournal.SecondaryMood2,
                _newJournal.Tags,
                _newJournal.WordCount,
                _currentUser.Id
            );

            // Reset the form after submission
            ResetForm();
            Navigation.NavigateTo("/journal/list");
        }
        catch (Exception ex)
        {
            // Print in the output for diagnostics
            System.Diagnostics.Debug.WriteLine($"Error saving journal entry: {ex.Message}");
            _errorMessage = "An unexpected error occurred while saving your entry.";
        }
    }

    // Validation for journal fields
    private string? ValidateEntry()
    {
        if (_hasTodayEntry)
            return "You can only create one journal entry per day.";

        if (string.IsNullOrWhiteSpace(_newJournal.Title))
            return "Title is required.";

        if (string.IsNullOrWhiteSpace(_newJournal.Content))
            return "Content is required.";

        if (string.IsNullOrWhiteSpace(_newJournal.Mood))
            return "Please select a primary mood.";

        if (_selectedSecondaryMoods.Count != 2)
            return "Please select at most 2 secondary moods.";

        if (_newJournal.Title.Length > 50)
            return "Title too long.";

        return null;
    }

    // Reset form 
    private void ResetForm()
    {
        _newJournal = new JournalEntry();
        _errorMessage = string.Empty;
        _selectedSecondaryMoods.Clear();
        _selectedTags.Clear();
        _newTagText = string.Empty;
    }
}
