@page "/change-password"

@using System.ComponentModel.DataAnnotations
@using Journal.Services
@using Journal.Models
@using BCrypt.Net
@inject IAuthService AuthService
@inject NavigationManager Navigation

<EditForm Model="@_formModel" OnValidSubmit="@HandleSubmit">
    <div class="change-password-page">

        <!-- Back button -->
        <a class="back-btn" href="/dashboard">Back</a>

        <div class="change-password-container">
            <h2>Change Password</h2>
            <div class="subtitle">Update your account password</div>

            <!-- Validation summary -->
            <ValidationSummary />

            <!-- Current password -->
            <div class="form-group">
                <label>Current Password</label>
                <div class="password-field">
                    <InputText type="@_currentPasswordType"
                               class="form-control"
                               @bind-Value="_formModel.CurrentPassword" />
                    <button type="button"
                            class="toggle-visibility"
                            @onclick="ToggleCurrentPassword">
                        @(_currentPasswordType == "password" ? "Show" : "Hide")
                    </button>
                </div>
                <ValidationMessage For="@(() => _formModel.CurrentPassword)" />
            </div>

            <!-- New password -->
            <div class="form-group">
                <label>New Password</label>
                <div class="password-field">
                    <InputText type="@_newPasswordType"
                               class="form-control"
                               @bind-Value="_formModel.NewPassword" />
                    <button type="button"
                            class="toggle-visibility"
                            @onclick="ToggleNewPassword">
                        @(_newPasswordType == "password" ? "Show" : "Hide")
                    </button>
                </div>

                <div class="password-requirements">
                    Must be at least 6 characters.
                </div>
                <ValidationMessage For="@(() => _formModel.NewPassword)" />
            </div>

            <!-- Confirm new password -->
            <div class="form-group">
                <label>Confirm New Password</label>
                <div class="password-field">
                    <InputText type="@_confirmPasswordType"
                               class="form-control"
                               @bind-Value="_formModel.ConfirmPassword" />
                    <button type="button"
                            class="toggle-visibility"
                            @onclick="ToggleConfirmPassword">
                        @(_confirmPasswordType == "password" ? "Show" : "Hide")
                    </button>
                </div>
                <ValidationMessage For="@(() => _formModel.ConfirmPassword)" />
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="error-message">@_errorMessage</div>
            }

            <!-- Submit -->
            <button type="submit" class="btn" disabled="@_isUpdating">
                @(_isUpdating ? "Updating Password..." : "Update Password")
            </button>
        </div>
    </div>
</EditForm>

@code {
    private ChangePasswordModel _formModel = new();
    private string _currentPasswordType = "password";
    private string _newPasswordType = "password";
    private string _confirmPasswordType = "password";

    private string _errorMessage = string.Empty;
    private bool _isUpdating;
    private User? _currentUser;

    protected override async Task OnInitializedAsync()
    {
        _currentUser = await AuthService.GetCurrentUser();

        if (_currentUser == null)
        {
            // Redirect to home if not authenticated
            Navigation.NavigateTo("/");
        }
    }

    private void ToggleCurrentPassword()
        => _currentPasswordType = _currentPasswordType == "password" ? "text" : "password";

    private void ToggleNewPassword()
        => _newPasswordType = _newPasswordType == "password" ? "text" : "password";

    private void ToggleConfirmPassword()
        => _confirmPasswordType = _confirmPasswordType == "password" ? "text" : "password";

    private async Task HandleSubmit()
    {
        _errorMessage = string.Empty;

        if (_currentUser is null)
        {
            _errorMessage = "User session is invalid. Please sign in again.";
            return;
        }

        if (_formModel.NewPassword != _formModel.ConfirmPassword)
        {
            _errorMessage = "New password and confirmation do not match.";
            return;
        }

        if (!BCrypt.Verify(_formModel.CurrentPassword, _currentUser.PasswordHash))
        {
            _errorMessage = "Current password is incorrect.";
            return;
        }

        _isUpdating = true;

        try
        {
            string newHashedPassword = BCrypt.HashPassword(_formModel.NewPassword);
            _currentUser.PasswordHash = newHashedPassword;

            bool updated = await AuthService.UpdateUser(_currentUser);

            if (updated)
            {
                await Application.Current!.Windows[0].Page!.DisplayAlert("Success", "Password updated successfully.", "OK");

                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                _errorMessage = "Failed to update password. Please try again.";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error changing password: {ex.Message}");
            _errorMessage = "An unexpected error occurred while changing your password.";
        }
        finally
        {
            _isUpdating = false;
        }
    }

    public class ChangePasswordModel
    {
        [Required]
        public string CurrentPassword { get; set; } = string.Empty;

        [Required]
        [MinLength(6, ErrorMessage = "New password must be at least 6 characters.")]
        public string NewPassword { get; set; } = string.Empty;

        [Required]
        [Compare(nameof(NewPassword), ErrorMessage = "Passwords do not match.")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
