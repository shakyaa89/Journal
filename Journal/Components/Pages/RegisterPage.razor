@page "/register"
@using Journal.Services
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation
@inject IAuthService AuthService

<div class="register-page">
    <a class="back-btn" href="/">Back</a>

    <div class="register-container">
        <h2>Create Account</h2>
        <p class="subtitle">Start your journaling journey</p>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="error">@_errorMessage</div>
        }

        <EditForm Model="_registerModel" OnValidSubmit="RegisterAsync">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label>Full Name</label>
                <InputText class="input"
                           @bind-Value="_registerModel.FullName"
                           placeholder="Your full name" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <InputText class="input"
                           type="email"
                           @bind-Value="_registerModel.Email"
                           placeholder="you@example.com" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <InputText class="input"
                           type="password"
                           @bind-Value="_registerModel.Password"
                           placeholder="Create a password" />
            </div>

            <button type="submit" class="btn" disabled="@_isRegistering">@(_isRegistering ? "Registering" : "Register")</button>
        </EditForm>

        <div class="register-link">
            Already have an account?
            <a href="/login">Login</a>
        </div>
    </div>
</div>

@code {
    // Registration form model
    private RegisterModel _registerModel = new();
    // Error message
    private string _errorMessage = string.Empty;
    // Registration loading state
    private bool _isRegistering;

    // Handle registration process
    private async Task RegisterAsync()
    {
        _errorMessage = string.Empty;
        _isRegistering = true;

        try
        {
            // Create new user 
            await AuthService.RegisterUserAsync(
                _registerModel.FullName,
                _registerModel.Email,
                _registerModel.Password
            );
            // Show successful registration
            await Application.Current!.Windows[0].Page!.DisplayAlertAsync("Success", "Your account has been created!", "OK");
            // Navigate to login page
            Navigation.NavigateTo("/login");
        }
        catch
        {
            _errorMessage = "Failed to register!";
        }
        finally
        {
            _isRegistering = false;
        }
    }

    // Registration form model 
    private class RegisterModel
    {
        [Required]
        public string FullName { get; set; } = string.Empty;

        [Required, EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required, MinLength(6)]
        public string Password { get; set; } = string.Empty;
    }
}
